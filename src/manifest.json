{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "short_name": "mbsrvm",
  "version": "0.1.0",
  "minimum_chrome_version": "120",
  "name": "Mobius Revamp",
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["injection.js"],
      "matches": [
        "http://localhost/",
        "https://*.mobius.cloud/qbeditor/*",
        "https://*.mobius.cloud/*/addquestion",
        "https://*.blank.page/"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "trg.mnguyen@gmail.com",
      "strict_min_version": "100.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["main.css", "main.js"],
      "matches": ["http://localhost/*", "https://*.mobius.cloud/*", "https://blank.page/*"]
    }
  ]
}
