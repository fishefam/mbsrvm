{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "component/*": ["app/component/*"],
      "store/*": ["app/store/*"],
      "typing/*": ["app/typing/*"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016"
  },
  "exclude": ["node_modules", "dist"]
}
